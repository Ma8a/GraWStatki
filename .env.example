NODE_ENV=development
PORT=3000

# Network
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
REQUIRE_ORIGIN_HEADER=false
TRUST_PROXY=false

# Local dependencies
REDIS_URL=redis://127.0.0.1:6379
DATABASE_URL=postgres://battleship:battleship@127.0.0.1:5432/battleship
REDIS_REQUIRED=false
DATABASE_REQUIRED=false

# Gameplay / reconnect
MATCH_TIMEOUT_MS=60000
ROOM_INACTIVITY_TIMEOUT_MS=600000
ROOM_RECONNECT_GRACE_MS=3000

# Chat
POST_GAME_CHAT_TTL_MS=60000
RATE_LIMIT_CHAT_PER_WINDOW=8
RATE_LIMIT_CHAT_WINDOW_MS=4000
CHAT_MIN_INTERVAL_MS=700
CHAT_DUPLICATE_WINDOW_MS=8000
CHAT_MAX_SIMILAR_IN_WINDOW=2
CHAT_BLOCK_LINKS=true
